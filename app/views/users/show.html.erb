<%= link_to :back, class: "btn btn-default" do %>
  <span class="glyphicon glyphicon-chevron-left"></span>
    Back
<% end %>

<br></br> 

<div class="panel panel-default">
  <div class="panel-body">
    <h2><%=@user.name %></h2>
    <p><%= link_to image_tag(@user.image_file_name), @user %></p>
  </div>
</div> 

 <div id="pins" class="transitions-enabled">
              <% @user.find_liked_items.each do |pin| %>
                <div class="box panel panel-default">
                    <div class="panel-body">
                      <div class="actions">
                      <b>Recept:</b>
                          <p><%= link_to pin.description, pin %></p>
                          <p><%= link_to image_tag(pin.image.url), pin %></p>

                      <p><b>Favoriet recept van: </b></p>
                          <% pin.votes_for.voters.each do |p| %> 
                          <% if p.present? %>
                           <p><%= link_to p.name, user_path(@user) %></p>
                           <% end %>   
                      <% end %>

                      </div>   
                    </div>
                </div>
            <% end %>
    </div>