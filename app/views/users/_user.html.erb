<% user = local_assigns.has_key?(:user) ? user : nil %>
<% if user %>
<div class="panel-body">
  <div class="actions">
    <p><b>Chef: </b><%= link_to user.name, user_path(user) %></p></strong>
    <p><%= link_to image_tag(user.image_file_name), user %></p>
    <p>Aantal favoriete recepten: <b><%= user.find_liked_items.size %></b></p>
    <div class="btn-group.pull-right">
      <%= link_to user_path(user), class: "btn btn-info btn-sm" do %>
      <span class="glyphicon glyphicon-fullscreen"></span>
      Bekijk profiel
      <% end %>
      <% if current_user && current_user != user %>
        <% if current_user.following?(user) %>
          <%= link_to "Stop volgen", user_unfollow_path(user), :method => :delete, :class => "btn btn-sm btn-danger", :remote => true %>
        <% else %>
          <%= link_to "Chef volgen", user_follow_path(user), :method => :post, :class => "btn btn-sm btn-success", :remote => true %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% end %>