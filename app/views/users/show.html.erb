<p><%= link_to 'Terug', :back %></p>
<h1><%=@user.name %></h1> 

<%= link_to "Stop volgen", user_unfollow_path(@user), :method => :delete, :class => "btn btn-sm btn-danger", :remote => true %>   


  <br></br><p>Bekijk hier de recepten van <b><%=@user.name %></b>.
    <div id="pins" class="transitions-enabled">
              <% @user.find_liked_items.each do |pin| %>
                <div class="box panel panel-default">
                    <div class="panel-body">
                      <div class="actions">
                      <b>Recept:</b>
                          <p><%= link_to pin.description, pin %></p>

                      <p><b>Favoriet recept van: </b></p>
                          <% pin.votes_for.voters.each do |p| %> 
                          <% if p.present? %>
                            <p><%= link_to image_tag(p.image_file_name), @user %></p>
                           <% end %>   
                      <% end %>

                      </div>   
                    </div>
                </div>
            <% end %>
    </div>